<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../static/head %>

    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="../assets/pages/css/portfolio.min.css" rel="stylesheet" type="text/css"/>
    <!-- END PAGE LEVEL STYLES -->
    <!-- BEGIN THEME LAYOUT STYLES -->

    <link href="../assets/layouts/layout/css/themes/darkblue.min.css" rel="stylesheet" type="text/css"
          id="style_color"/>
    <link href="../assets/layouts/layout/css/custom.min.css" rel="stylesheet" type="text/css"/>
    <!-- END THEME LAYOUT STYLES -->
    <link href="/assets/global/plugins/bootstrap-multiselect/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />

    <link href="/css/plugins/croppie.css" rel="stylesheet" type="text/css"/>


    <link href="/css/plugins/justifiedGallery.css" rel="stylesheet" type="text/css"/>

    <link href="/css/lines.css" rel="stylesheet" type="text/css"/>

</head>

<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white page-lines-list">


<div class="page-wrapper">

    <header id="header" valign="botoom">
        <% include ../static/header %>
    </header>

    <!-- BEGIN CONTAINER -->
    <div class="page-container">

        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="wrapper-title">
                <h1 class="page-title text-center"> Lines</h1>
            </div>
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">

                <!-- END PAGE TITLE-->
                <!-- END PAGE HEADER-->
                <div class="row">
                    <div class="col-md-12">


                        <div class="pull-left group-btn">
                            <div class="pull-left">
                                <a class="filter-all btn blue btn-outline">
                                    All
                                </a>
                                <span><%= lineTotalCount %></span>
                            </div>

                            <div class="pull-left">
                                <a data-status="true" class="filter-status btn btn-outline btn-success"> Active
                                </a>
                                <span><%= lineActiveCount %></span>
                            </div>
                            <div class="pull-left">
                                <a data-status="false" class="filter-status btn btn-outline btn-danger"> Unactive
                                </a>
                                <span><%= lineUnActiveCount %></span>
                            </div>
                            <a class="btn btn-outline dark" data-target="#modal-add-line"
                               data-toggle="modal"> Add
                                Line <i class="fa fa-plus-circle" aria-hidden="true"></i>
                            </a>
                        </div>


                        <div class="pull-right group-input">
                            <div class="group-icon-text pull-left">
                               <span class="multiselect-native-select"><select
                                           class="mt-multiselect btn btn-default mt-noicon" multiple="multiple"
                                           data-clickable-groups="true" data-collapse-groups="true" data-width="100%">
                                        <optgroup label="Group 1" class="group-1">
                                            <option value="1-1">Option 1.1</option>
                                            <option value="1-2" selected="selected">Option 1.2</option>
                                            <option value="1-3" selected="selected">Option 1.3</option>
                                        </optgroup>
                                        <optgroup label="Group 2" class="group-2">
                                            <option value="2-1">Option 2.1</option>
                                            <option value="2-2">Option 2.2</option>
                                            <option value="2-3">Option 2.3</option>
                                        </optgroup>
                                    </select>
                               </span>
                            </div>
                            <div id="refresh-lines" class="group-icon-text pull-left">
                                <span class="fa fa-refresh"></span>
                            </div>

                            <div class="form-group search-block pull-right">
                                <div class="input-icon input-circle-left">
                                    <i class="fa fa-search"></i>
                                    <input placeholder="Filter lines" name="search" type="text" class="form-control">
                                </div>

                            </div>
                        </div>


                    </div>

                    <div class="col-md-12">
                        <div id="lines-gallery">
                        </div>
                    </div>
                </div>


            </div>


        </div>
    </div>


</div>
<!-- END CONTENT BODY -->


<!-- responsive modal -->
<div id="modal-add-line" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Create Line</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- BEGIN FORM-->
                    <form action="/line/add" method="post" class="form-horizontal"
                          id="form_add_line">
                        <div class="form-body">
                            <div class="container col-md-12">
                                <div class="alert alert-danger display-hide">
                                    <button class="close" data-close="alert"></button>
                                    You have some form errors. Please check below.
                                </div>

                                <div class="alert alert-success display-hide">
                                    <button class="close" data-close="alert"></button>
                                    Your form validation is successful!
                                </div>

                                <div class="form-group form-md-line-input">
                                    <label class="col-md-3 control-label" for="form-line-origin-name">Name
                                        In Origin Language
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input id="form-line-origin-name" type="text"
                                               class="form-control"
                                               placeholder="Enter Origin Name" value="newLine"
                                               name="lineOriginName" required maxlength="40">
                                        <div class="form-control-focus"></div>
                                        <span class="help-block">Name In Origin Language</span>
                                    </div>
                                </div>

                                <div class="form-group form-md-line-input">
                                    <label class="col-md-3 control-label" for="form-line-english-name">Name
                                        In English
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <input id="form-line-english-name" type="text"
                                               class="form-control"
                                               placeholder="Name In English" value="newLine"
                                               name="lineEnglishName" required maxlength="40">
                                        <div class="form-control-focus"></div>
                                        <span class="help-block">Name In English</span>
                                    </div>
                                </div>


                                <div class="form-group form-md-line-input">
                                    <label class="control-label col-md-3">Country
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select id="form-line-country-select"
                                                class="bs-select form-control" data-live-search="true"
                                                data-size="8"
                                                name="countrySelect">

                                        </select>
                                    </div>
                                </div>

                                <div class="form-group form-md-line-input">
                                    <label class="control-label col-md-3">City
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-9">
                                        <select id="form-line-city-select"
                                                class="bs-select form-control" data-live-search="true"
                                                data-size="8"
                                                name="citySelect">
                                        </select>
                                    </div>
                                </div>


                                <div class="form-group form-md-line-input">
                                    <label class="control-label col-md-3">Description</label>

                                    <div class="col-md-9">
                                        <div class="tabbable-line">
                                            <ul class="nav nav-tabs">
                                                <li class="active"><a href="#english-language-container"
                                                                      data-toggle="tab"
                                                                      aria-expanded="true">English</a>
                                                </li>
                                                <li><a href="#origin-language-container"
                                                       data-toggle="tab"
                                                       aria-expanded="false">Origin</a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div class="tab-pane active"
                                                     id="english-language-container">
                                                    <div class="form-group form-md-line-input">
                                                        <div class="col-md-12">
                                                                            <textarea id="english-language-textarea"
                                                                                      class="form-control"
                                                                                      name="englishDescription"
                                                                                      rows="3"
                                                                                      style="margin-top: 0px; margin-bottom: 0px; height: 96px;"></textarea>
                                                            <div class="form-control-focus"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="tab-pane" id="origin-language-container">
                                                    <div class="form-group form-md-line-input">
                                                        <div class="col-md-12">
                                                                            <textarea id="origin-language-textarea"
                                                                                      class="form-control"
                                                                                      name="originDescription"
                                                                                      rows="3"
                                                                                      style="margin-top: 0px; margin-bottom: 0px; height: 96px;"></textarea>
                                                            <div class="form-control-focus"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
                <button id="button_send_notification" form="form_add_line" type="submit"
                        class="btn green">Create
                </button>
            </div>
        </div>
    </div>
</div>


<footer>
    <% include ../static/footer %>

    <script src="/assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
    <script src="/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>


    <script src="/js/plugins/croppie.js" type="text/javascript"></script>

    <script src="/js/plugins/justifiedGallery.js" type="text/javascript"></script>



    <script src="/js/lines.js" type="text/javascript"></script>

    <script src="/assets/pages/scripts/components-bootstrap-multiselect.min.js" type="text/javascript"></script>
</footer>

<% include ../static/menu %>

</body>
</html>


