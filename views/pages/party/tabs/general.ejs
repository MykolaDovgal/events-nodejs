<form enctype="multipart/form-data" method="post"
      id="form_change_line">
	<div class="col-md-7 form-md-line-input">

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label">
				Title
			</label>
			<div class="col-md-9">
				<div class="col-xs-12 language_switch_container">
					<a id="title_eng" data-type="text" data-pk="1"
					   class="editable editable-click" style="display: inline-block"> <%= party.title_eng %> </a>
				</div>
				<div hidden class="col-xs-12 language_switch_container">
					<a id="title_ol" data-type="text" data-pk="1"
					   class="editable editable-click" style="display: inline-block"> <%= party.title_ol %> </a>
				</div>
			</div>
		</div>

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label">
				Line
			</label>
			<div class="col-md-9">
				<div class="col-xs-12">

					<div class="language_switch_container">
						<a class="lineId">
							<span id="line_title_english"><%= line.line_name_eng %></span>
						</a>
					</div>
					<div hidden class="language_switch_container">
						<a class="lineId">
							<span id="line_title_original"><%= line.line_name_ol %></span>
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label">
				Mom Event
			</label>
			<div class="col-md-9">
				<div class="col-xs-12">
					<a id="mom_eventId" data-type="text" data-pk="1"
					   class="editable editable-click" style="display: inline-block"> <%= party.mom_eventId %> </a>
				</div>
			</div>
		</div>

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label" for="active">Visible Only for Event Participants</label>
			<div class="col-md-9 md-checkbox-inline">
				<div class="col-xs-12">
					<input id="visible-switch" type="checkbox"
					       class="make-switch form-control" <%= party.only_for_mom_event_att ? 'checked' : '' %>
					       data-on-color="success" data-on-text="Yes" data-off-text="No" data-off-color="warning"/>
				</div>
			</div>
		</div>

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label">
				Facebook Page
			</label>
			<div class="col-md-9">
				<div class="col-xs-12">
					<a id="facebook_page" data-type="text" data-pk="1"
					   class="editable editable-click" style="display: inline-block"> <%= party.facebook_page %> </a>
				</div>
			</div>
		</div>

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label">
				Date & Time
			</label>
			<div class="col-md-9">
				<div class="col-xs-12">
					<div id="datetime_div" class="input-group date">
						<input id="datetime_input" name="notification_time" class="form-control" type="text"
						       data-date-format="dd/mm/yyyy hh:ii" value="<%= party_date %>">
						<span class="input-group-addon"><i class="fa fa-times"></i></span>
						<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
					</div>
				</div>
			</div>
		</div>

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label" for="active">Active</label>
			<div class="col-md-9 md-checkbox-inline">
				<div class="col-xs-12">
					<input id="active-switch" type="checkbox"
					       class="make-switch form-control" <%= party.active ? 'checked' : '' %> data-on-color="success"
					       data-on-text="Active" data-off-text="Disabled" data-off-color="warning"/>
				</div>
			</div>
		</div>

		<div class="row vertical-row vertical-top offset-bottom-1_5">

			<label class="col-md-3 control-label">
				Description
			</label>

			<div class="col-md-9 description-general form-group form-textarea">
				<div id="description_eng" data-pk="1" data-type="wysihtml5"
				     data-original-title="Enter notes"
				     class="editable editable-open language_switch_container"><%= party.description_eng %></div>

				<div hidden id="description_ol" data-pk="1" data-type="wysihtml5"
				     data-original-title="Enter notes"
				     class="editable editable-open language_switch_container"><%= party.description_ol %></div>
			</div>
		</div>
	</div>


</form>
<div class="col-xs-12 offset-top-5">
	<div class="pull-right group-btn">
		<button class="btn yellow btn-outline sbold" id="delete_party">
			Delete Party
		</button>
		<a href="/parties">
			<button type="button" class="btn green pull-right">
				Save & Quit
			</button>
		</a>
	</div>
</div>