<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../../static/head %>

	<!-- BEGIN PAGE LEVEL STYLES -->
	<link href="/assets/pages/css/portfolio.min.css" rel="stylesheet" type="text/css"/>
	<!-- END PAGE LEVEL STYLES -->
	<!-- BEGIN THEME LAYOUT STYLES -->

	<link href="/assets/layouts/layout/css/themes/darkblue.min.css" rel="stylesheet" type="text/css"
		  id="style_color"/>
	<link href="/assets/layouts/layout/css/custom.min.css" rel="stylesheet" type="text/css"/>

	<link href="/assets/global/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css"/>
	<!-- END THEME LAYOUT STYLES -->
	<link href="/assets/global/plugins/typeahead/typeahead.css" rel="stylesheet" type="text/css"/>

	<link href="/assets/global/plugins/bootstrap-toastr/toastr.min.css" rel="stylesheet" type="text/css"/>

	<link href="/css/plugins/croppie.css" rel="stylesheet" type="text/css"/>

	<link href="/css/lines.css" rel="stylesheet" type="text/css"/>
	<link href="/assets/global/plugins/bootstrap-editable/bootstrap-editable/css/bootstrap-editable.css" rel="stylesheet" type="text/css">
</head>

<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">


<div class="page-wrapper">

	<header id="header" valign="botoom">
		<% include ../../static/header %>
	</header>

	<!-- BEGIN CONTAINER -->
	<div class="page-container">

		<!-- BEGIN CONTENT -->
		<div class="page-content-wrapper">

			<!-- BEGIN CONTENT BODY -->
			<div  class="page-content">
				<div class="row">
					<div class="wrapper-title">

						<div class="text-center">
							<div class="language_switch_container">
								<h1 id="english_title" class="page-title"> <%= party.title_eng %> </h1>
							</div>
							<div hidden class="language_switch_container">
								<h1 id="ol_title" class="page-title"> <%= party.title_ol %> </h1>
							</div>
							<h4 >#<%= party.id %></h4>
							<h4 id="place_title">in <%= party.location.city + ', ' + party.location.country %></h4>
						</div>
					</div>
					<div class="col-md-3">
						<div class="wrapper-line border-line croppie-container mt-element-overlay">
							<div class="mt-overlay-1">
								<img id="cover_picture" class="cover-picture"
									 src="<%= party.cover_picture ? party.cover_picture : '/images/cover-picture.jpg' %>">
								<div class="mt-overlay">
									<ul class="mt-info">
										<li>
											<a class="btn file-btn">
												<button id="upload_button" class="btn cover-button">Upload</button>
												<input id="cover_picture_upload" type="file" accept="image/*">
											</a>
										</li>
									</ul>
								</div>
							</div>





						</div>
						<div class="wrapper-line border-line offset-top-2">
							<p class="title-block">Location</p>
							<div id="map" class="map"></div>
						</div>
						<div class=" wrapper-line border-line offset-top-2">
							<div class="input-group">
								<input value="<%= party.location.country %> <%= party.location.country ? ', ' : '' %> <%= party.location.city %>"
									   type="text" id="geocomplete_line" class="form-control"
									   placeholder="Search for city, country">
								<span class="input-group-btn">
								<button id="find_geocomplete" class="btn green"
										type="button">Save address</button>
							  </span>
							</div>


							<div class="geo-data">
								<input id="lat" name="lat" type="text" value=""/>
								<input id="lng" name="lng" type="text" value=""/>
								<input id="locality" name="locality" type="text" value=""/>
								<input id="country" name="country" type="text" value=""/>
								<input id="country_short" name="country_short" type="text" value=""/>
							</div>

						</div>
					</div>
					<div class="col-md-9">
						<div class="tabbable-line line-tab-width">
							<ul class="nav nav-tabs">
								<li class="active"><a href="#general-container"
													  data-toggle="tab"
													  aria-expanded="true">General</a>
								</li>
								<li><a href="#parties-container"
									   data-toggle="tab"
									   aria-expanded="false">Parties</a>
								</li>
								<li><a href="#followers-container"
									   data-toggle="tab"
									   aria-expanded="false">Followers</a>
								</li>
								<li class="switch-lang pull-right">
										<input id="language_switch" type="checkbox" class="make-switch form-control" data-on-color="success" data-on-text="Original" data-off-text="English"  data-off-color="warning"/>
								</li>
							</ul>
							<div class="tab-content offset-table-retreat">
								<div class="tab-pane active" id="general-container">
									<form enctype="multipart/form-data" method="post"
										  id="form_change_line">
										<div class="col-md-7 form-md-line-input">

											<div class="row vertical-row vertical-center offset-bottom-1_5">
												<label class="col-md-3 control-label">
													Title
												</label>
												<div class="col-md-9">
													<div class="col-xs-12 language_switch_container">
														<a id="party_title_eng" data-type="text" data-pk="1"
														   class="editable editable-click" style="display: inline-block"> <%= party.title_eng %> </a>
													</div>
													<div hidden class="col-xs-12 language_switch_container">
														<a id="party_title_ol" data-type="text" data-pk="1"
														   class="editable editable-click" style="display: inline-block"> <%= party.title_ol %> </a>
													</div>
												</div>
											</div>

											<div class="row vertical-row vertical-center offset-bottom-1_5">
												<label class="col-md-3 control-label">
													Line
												</label>
												<div class="col-md-9">
													<div class="col-xs-12 language_switch_container">
														<a id="line_name_eng" data-type="text" data-pk="1"
														   class="editable editable-click" style="display: inline-block"> <%= line_name_eng %> </a>
													</div>
												</div>
											</div>
												


											<div class="row vertical-row vertical-center offset-bottom-1_5">
												<label class="col-md-3 control-label" for="active">Active</label>
												<div class="col-md-9 md-checkbox-inline">
													<div class="col-xs-12">
														<input id="active-switch" type="checkbox" class="make-switch form-control" <%= party.active ? 'checked' : '' %>  data-on-color="success" data-on-text="Active" data-off-text="Disabled"  data-off-color="warning"/>
													</div>
												</div>
											</div>

											<div class="row vertical-row vertical-top offset-bottom-1_5">

												<label class="col-md-3 control-label">
													Description
												</label>

												<div class="col-md-9 description-general form-group form-textarea">
													<div id="description_eng" data-pk="1" data-type="wysihtml5"
														 data-original-title="Enter notes" class="editable editable-open language_switch_container"><%= party.description_eng %></div>

													<div hidden id="description_ol" data-pk="1" data-type="wysihtml5"
														  data-original-title="Enter notes" class="editable editable-open language_switch_container"><%= party.description_ol %></div>
												</div>
											</div>
										</div>

										
										<div class="col-xs-12 offset-top-5">
											<a class="btn red btn-outline  sbold" data-toggle="modal"
											   href="#send_notification"> Send Notification </a>
											<div class="pull-right group-btn">
												<button class="btn yellow btn-outline sbold uppercase" id="delete_line">
													Delete Line
												</button>
												<a href="/lines">
													<button type="button" class="btn green pull-right">
														Save & Quit
													</button>
												</a>
											</div>
										</div>
									</form>
								</div>

								<!-- Tab parties -->
								<div class="tab-pane" id="parties-container">
									<div class="row">
										<div class="col-md-12">
											<table id="table-line-parties"
												   class="table table-striped table-bordered table-hover table-checkable order-column">
												<thead>
												<tr>
													<th>#</th>
													<th class="no-sort">Picture</th>
													<th>Status</th>
													<th>User Name</th>
													<th>Name</th>
													<th>Facebook</th>
													<th>Last Activity</th>
													<th>Bars</th>
													<th>Events</th>
													<th>Lines</th>
												</tr>
												</thead>
											</table>

										</div>
									</div>
								</div>

								<!-- Tab followers -->
								<div class="tab-pane" id="followers-container">
									<div class="row">
										<div class="col-md-12">
											<table id="table-line-followers"
												   class="table table-striped table-bordered table-hover table-checkable order-column">
												<thead>
												<tr>
													<th>#</th>
													<th class="no-sort">Picture</th>
													<th>Status</th>
													<th>User Name</th>
													<th>Name</th>
													<th>Facebook</th>
													<th>Last Activity</th>
													<th>Bars</th>
													<th>Events</th>
													<th>Lines</th>
												</tr>
												</thead>
											</table>

										</div>
									</div>
								</div>

							</div>

						</div>
					</div>
				</div>
			</div>
			<!-- END CONTENT BODY -->
		</div>
		<!-- END CONTENT -->

	</div>
	<!-- END CONTAINER -->
</div>


<footer>
	<% include ../../static/footer %>

	<script src="/assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
	<script src="/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>

	<script src="/assets/global/plugins/bootstrap-modal/js/bootstrap-modalmanager.js" type="text/javascript"></script>
	<script src="/assets/global/plugins/bootstrap-modal/js/bootstrap-modal.js" type="text/javascript"></script>

	<script src="/assets/pages/scripts/ui-extended-modals.min.js" type="text/javascript"></script>

	<script src="/assets/global/scripts/datatable.js" type="text/javascript"></script>
	<script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>

	<script src="/js/plugins/croppie.js" type="text/javascript"></script>

	<script src="/assets/global/plugins/bootstrap-toastr/toastr.min.js" type="text/javascript"></script>


	<script>
		var party = <%- JSON.stringify(party) %>;
	</script>

	<script src="/js/party/party.js"></script>    

	<script defer
			src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCVlanyJ2xLrNhMZIUhSXTYu1uq31e7Ti4&callback=initMap&libraries=places&language=en">
	</script>

	<script src="/js/plugins/jquery.geocomplete.js"></script>

	<script src="/assets/global/plugins/typeahead/handlebars.min.js" type="text/javascript"></script>
	<script src="/assets/global/plugins/typeahead/typeahead.bundle.min.js" type="text/javascript"></script>

	<script src="../assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>

	<script>

		$('#datetime_input').datetimepicker({
			format: 'yyyy-mm-dd hh:ii',
			autoclose: true,
			useCurrent: false,
			setDate: Date.now()
		});


	</script>
</footer>

<% include ../../static/menu %>

</body>
</html>