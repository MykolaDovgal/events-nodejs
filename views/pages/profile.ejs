<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../static/head %>

    <!-- BEGIN THEME LAYOUT STYLES -->
    <link href="/assets/layouts/layout/css/layout.min.css" rel="stylesheet" type="text/css"/>
    <link href="/assets/layouts/layout/css/themes/darkblue.min.css" rel="stylesheet" type="text/css" id="style_color"/>
    <link href="/assets/layouts/layout/css/custom.min.css" rel="stylesheet" type="text/css"/>
    <link href="/css/style.css" rel="stylesheet" type="text/css"/>
    <!-- END THEME LAYOUT STYLES -->

    <link href="/css/plugins/croppie.css" rel="stylesheet" type="text/css"/>

</head>

<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">


<div class="page-wrapper">

    <header id="header" valign="botoom">
        <% include ../static/header %>
    </header>

    <!-- BEGIN CONTAINER -->
    <div class="page-container">

        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">


                <!-- END PAGE HEADER-->
                <div class="row">
                    <div class="col-md-2">
                        <div class="col-md-12 text-center">
                            <img class="profile-picture-big" src="<%= user.profile_picture_circle%>">
                        </div>
                        <div class="col-md-12 text-center">
                            <br>
                            <button class="btn btn-default">Fit & Crop</button>
                            <button class="btn btn-default">Change</button>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <form>
                            <label for="username">User Name</label>
                            <input name="username" type="text" class="form-control"
                                    placeholder="Enter User Name" value="<%= user.username %>" required/>
                            <label for="firstname">First Name</label>
                            <input name="firstname" type="text" class="form-control"
                                   placeholder="Enter First Name" value="<%= user.firstname %>" required/>
                            <label for="lastname">Last Name</label>
                            <input name="lastname" type="text" class="form-control"
                                   placeholder="Enter User Name" value="<%= user.lastname %>" required/>
                            <label for="firstname">Facebook Profile</label>
                            <input name="facebook" type="text" class="form-control"
                                   placeholder="Enter Facebook Profile URL" value="<%= user.facebook_profile %>" required/>
                            <label for="username">Email Address</label>
                            <input name="email" type="email" class="form-control"
                                   placeholder="Enter User Email" value="<%= user.email %>"/>
                            <label for="about">About</label>
                            <textarea name="about" class="form-control" placeholder="Enter additional information"></textarea>
                            <% if (user.date_of_birth) {%>
                            Date of Birth: <%= user.date_of_birth.toLocaleDateString('en-us', { day: '2-digit', month: 'long', year: 'numeric',  }) %> (Age <%= Math.floor((Date.now() - user.date_of_birth) / 1000 / 3600 / 24 / 365) %>)
                            <% } %>
                            <br/>
                            <button class="btn btn-default" type="submit">Save</button>
                            <button class="btn btn-default btn-danger">Delete</button>
                        </form>
                    </div>
                    <div class="col-md-5">
                        <div class="col-md-6">
                            Log In
                        </div>
                        <div class="col-md-6">
                            Log Out
                        </div>

                    </div>
                </div>
            </div>
            <!-- END CONTENT BODY -->
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->
</div>


<footer>
    <% include ../static/footer %>

    <script src="/assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
    <script src="/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>



    <script src="/js/plugins/croppie.js" type="text/javascript"></script>
</footer>

<% include ../static/menu %>

</body>
</html>


