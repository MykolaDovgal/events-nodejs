 <!DOCTYPE html>
<html lang="en">
<head>
    <% include ../static/head %>

    <!-- BEGIN THEME LAYOUT STYLES -->
   <!-- <link href="/assets/layouts/layout/css/layout.min.css" rel="stylesheet" type="text/css"/>-->
    <link href="/assets/layouts/layout/css/themes/darkblue.min.css" rel="stylesheet" type="text/css" id="style_color"/>
    <link href="/assets/layouts/layout/css/custom.min.css" rel="stylesheet" type="text/css"/>
    <link href="/css/style.css" rel="stylesheet" type="text/css"/>
    <!-- END THEME LAYOUT STYLES -->

    <link href="/css/plugins/croppie.css" rel="stylesheet" type="text/css"/>

</head>

<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">


<div class="page-wrapper">

    <header id="header" valign="botoom">
        <% include ../static/header %>
    </header>

    <!-- BEGIN CONTAINER -->
    <div class="page-container">

        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">

                <div class="row">
                    <div class="col-md-2">
                        <div class="col-md-12 text-center">
                            <img id="userpic" class="profile-picture-big" src="<%= user.profile_picture_circle %>">
                        </div>
                        <div class="col-md-12 text-center">
                            <br>
                            <button class="btn btn-default">Fit & Crop</button>
                            <button class="btn btn-default" onclick="$('#change-picture-modal').modal().show()">Change</button>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="portlet light bordered">
                            <div class="portlet-body">
                                <ul class="nav nav-pills">
                                    <li class="active">
                                        <a href="#tab_general" data-toggle="tab">General</a>
                                    </li>
                                    <li>
                                        <a href="#tab_managing" data-toggle="tab">Managing</a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane fade active in" id="tab_general">
                                        <div class="row">
                                            <div class="col-md-7">
                                                <form action="/user/update" method="post" class="form-horizontal"
                                                      enctype="multipart/form-data" id="form_update_user">
                                                    <label for="username">User Name</label>
                                                    <input name="username" type="text" class="form-control"
                                                           placeholder="Enter User Name" value="<%= user.username %>"
                                                           required readonly/>
                                                    <label for="firstname">First Name</label>
                                                    <input name="firstname" type="text" class="form-control"
                                                           placeholder="Enter First Name" value="<%= user.firstname %>"
                                                           required/>
                                                    <label for="lastname">Last Name</label>
                                                    <input name="lastname" type="text" class="form-control"
                                                           placeholder="Enter User Name" value="<%= user.lastname %>"
                                                           required/>
                                                    <label for="firstname">Facebook Profile</label>
                                                    <input name="facebook" type="text" class="form-control"
                                                           placeholder="Enter Facebook Profile URL"
                                                           value="<%= user.facebook_profile %>"/>
                                                    <label for="username">Email Address</label>
                                                    <input name="email" type="email" class="form-control"
                                                           placeholder="Enter User Email" value="<%= user.email %>"/>
                                                    <label for="dateofbirth"><%= user.date_of_birth ? 'Date of Birth (Age ' + Math.floor((Date.now() - user.date_of_birth) / 1000 / 3600 / 24 / 365) + ')' : 'Please set date of birth' %>
                                                    </label>
                                                    <div class="input-group input-medium date date-picker"
                                                         data-date-format="dd.mm.yyyy" data-date-end-date="+0d">

                                                        <input value="<%= dateOfBirth %>"
                                                               id="form-date-of-birth"
                                                               name="dateofbirth" type="text"
                                                               class="form-control"
                                                               readonly/>
                                                        <span class="input-group-btn">
                                                            <button class="btn default" type="button">
                                                                <i class="fa fa-calendar"></i>
                                                            </button>
                                                    </span>
                                                    </div>
                                                    <label for="about">About</label>
                                                    <textarea name="about" class="form-control"
                                                              placeholder="Enter additional information"><%= user.about %></textarea>
                                                <br/>
                                                    <label for="active">Active</label>
                                                    <input name="active" type="checkbox" class="make-switch form-control" <%= user.active ? 'checked' : '' %> data-on-text="Active" data-off-text="Disabled">

                                                </form>
                                            </div>

                                            <div class="col-md-5">
                                                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                                                <div class="portlet light bordered">
                                                    <div class="portlet-title">
                                                        <div class="caption font-red">
                                                            <i class="icon-settings font-red"></i>
                                                            <span class="caption-subject bold">Activity</span>
                                                        </div>
                                                        <div class="tools"></div>
                                                    </div>
                                                    <div class="portlet-body table-both-scroll">
                                                        <table class="table table-striped table-bordered table-hover order-column"
                                                               id="table-user-activity">
                                                            <thead>
                                                            <th>Log In</th>
                                                            <th>Log Out</th>
                                                            </thead>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="tab_managing">
                                        <p> Food truck fixie locavore, accusamus mcsweeney's marfa nulla single-origin
                                            coffee squid. Exercitation +1 labore velit, blog sartorial PBR leggings next
                                            level wes anderson artisan four loko farm-to-table
                                            craft beer twee. Qui photo booth letterpress, commodo enim craft beer mlkshk
                                            aliquip jean shorts ullamco ad vinyl cillum PBR. Homo nostrud organic,
                                            assumenda labore aesthetic magna delectus mollit. Keytar
                                            helvetica VHS salvia yr, vero magna velit sapiente labore stumptown. Vegan
                                            fanny pack odio cillum wes anderson 8-bit, sustainable jean shorts beard ut
                                            DIY ethical culpa terry richardson biodiesel. Art
                                            party scenester stumptown, tumblr butcher vero sint qui sapiente accusamus
                                            tattooed echo park. </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-right">
                            <button class="btn btn-default" form="form_update_user" type="submit">Save</button>
                            <button class="btn btn-default btn-danger" onclick="showDeleteConfirmation()">Delete</button>
                        </div>
                    </div>
                </div>

            </div>
            <!-- END CONTENT BODY -->
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->
</div>

<div id="change-picture-modal" class="modal fade bs-modal-lg" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Change User Picture</h4>
            </div>
            <div class="modal-body">
                <div class="scroller" style="height:570px" data-always-visible="1" data-rail-visible1="1">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- BEGIN VALIDATION STATES-->
                            <div class="portlet light portlet-fit portlet-form bordered">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class=" icon-layers font-green"></i>
                                        <span class="caption-subject font-green sbold uppercase">User Picture</span>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <!-- BEGIN FORM-->
                                    <form method="post" class="form-horizontal"
                                          enctype="multipart/form-data" id="form_change_picture">
                                        <div class="form-body">
                                            <div class="form-group form-md-line-input">

                                                <div class="upload-demo-wrap">
                                                    <div id="upload-profile-pic"></div>
                                                </div>

                                                <label class="col-md-3 control-label" for="form-profile-pic">Profile
                                                    Pic</label>
                                                <div class="col-md-9">
                                                    <input type="file" id="form-profile-pic" name="profile-image"
                                                           class="form-control"
                                                           value="Choose a file"
                                                           accept="image/*"/>

                                                    <div class="form-control-focus"></div>
                                                </div>
                                            </div>

                                            <div class="form-group form-md-line-input">
                                                <div class="col-md-12">
                                                    <div id="upload-demo"></div>
                                                    <input type="hidden" id="imagebase64" name="imagebase64">
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <!-- END FORM-->
                                </div>
                            </div>
                            <!-- END VALIDATION STATES-->
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="button-cancel" type="button" data-dismiss="modal" class="btn dark btn-outline">Cancel</button>
                <button id="button-change-picture" class="btn green">Change Picture</button>
            </div>
        </div>
    </div>
</div>

<footer>
    <% include ../static/footer %>

    <script>
        var user = <%- JSON.stringify(user) %>;
    </script>

    <script src="/assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
    <script src="/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>

    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>


    <script src="/js/plugins/croppie.js" type="text/javascript"></script>


    <script src="/js/profile.js" type="text/javascript"></script>
</footer>

<% include ../static/menu %>

</body>
</html>


