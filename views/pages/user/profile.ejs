<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../../static/head %>

	<!-- BEGIN THEME LAYOUT STYLES -->

	<link href="/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.css" rel="stylesheet"
	      type="text/css"/>
	<link href="/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet"
	      type="text/css"/>
	<link href="/assets/global/plugins/bootstrap-timepicker/css/bootstrap-timepicker.min.css" rel="stylesheet"
	      type="text/css"/>

	<link href="/assets/layouts/layout/css/layout.min.css" rel="stylesheet" type="text/css"/>
	<link href="/assets/layouts/layout/css/themes/darkblue.min.css" rel="stylesheet" type="text/css" id="style_color"/>
	<link href="/assets/layouts/layout/css/custom.min.css" rel="stylesheet" type="text/css"/>
	<link href="/assets/global/plugins/bootstrap-toastr/toastr.min.css" rel="stylesheet" type="text/css"/>


	<link href="/css/plugins/croppie.css" rel="stylesheet" type="text/css"/>

	<link href="/css/user/users.css" rel="stylesheet" type="text/css"/>
	<!-- END THEME LAYOUT STYLES -->
	<link href="/assets/global/plugins/bootstrap-editable/bootstrap-editable/css/bootstrap-editable.css"
	      rel="stylesheet" type="text/css">
</head>

<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">


<div class="page-wrapper">

	<header id="header" valign="botoom">
		<% include ../../static/header %>
	</header>

	<!-- BEGIN CONTAINER -->
	<div class="page-container">

		<!-- BEGIN CONTENT -->
		<div class="page-content-wrapper">
			<!-- BEGIN CONTENT BODY -->
			<div class="page-content">

				<div class="row">
					<div class="col-md-2 ">
						<div class="row">
							<div class="user-picture mt-element-card mt-card-round mt-element-overlay">
								<div class="mt-card-item">
									<div class="mt-card-avatar mt-overlay-1">
										<img id="userpic" src="<%= user.profile_picture_circle %>"/>
										<div class="mt-overlay">
											<ul class="mt-info">
												<li>
													<a id="button-open-crop" class="btn default btn-outline">
														<i class="fa fa-crop" aria-hidden="true"></i></i>Fit & Crop
													</a>
												</li>
												<li>
													<a id="button-open-change" class="btn default btn-outline">
														<i class="fa fa-pencil" aria-hidden="true"></i></i>Change
													</a>
												</li>
											</ul>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-10">
						<div class="portlet light bordered">
							<div class="portlet-body tabbable-line line-tab-width">
								<ul class="nav nav-tabs">
									<li class="active">
										<a href="#tab_general" data-toggle="tab">General</a>
									</li>
									<li>
										<a href="#tab_managing" data-toggle="tab">Managing</a>
									</li>
								</ul>
								<div class="tab-content">
									<div class="tab-pane fade active in" id="tab_general">
										<div class="row">
											<div class="col-md-12 col-lg-7">
												<form action="/user/update" method="post"
												      enctype="multipart/form-data" id="form_update_user">
													<div class="col-md-12 form-md-line-input">
														<div class="vertical-row vertical-center offset-bottom-1_5">
															<label class="col-xs-4 col-md-3 control-label">
																User Name
															</label>
															<div class="col-xs-8 col-md-9 form-group">
																<a id="username" data-type="text" data-pk="1"
																   class="editable editable-click"> <%= user.username %> </a>
															</div>
														</div>

														<div class="vertical-row vertical-center offset-bottom-1_5">
															<label class="col-xs-4 col-md-3 control-label">
																First Name
															</label>
															<div class="col-xs-8 col-md-9">
																<a id="firstname" data-type="text" data-pk="1"
																   class="editable editable-click"> <%= user.firstname %> </a>
															</div>
														</div>

														<div class="vertical-row vertical-center offset-bottom-1_5">
															<label class="col-xs-4 col-md-3 control-label">
																Last Name
															</label>
															<div class="col-xs-8 col-md-9">
																<a id="lastname" data-type="text" data-pk="1"
																   class="editable editable-click"> <%= user.lastname %> </a>
															</div>
														</div>

														<div class="vertical-row vertical-center offset-bottom-1_5">
															<label class="col-xs-4 col-md-3 control-label">
																Facebook Profile
															</label>
															<div class="col-xs-8 col-md-9">
																<a id="facebook_profile" data-type="text" data-pk="1"
																   class="editable editable-click"> <%= user.facebook_profile %> </a>
															</div>
														</div>

														<div class="vertical-row vertical-center offset-bottom-1_5">
															<label class="col-xs-4 col-md-3 control-label">
																Email Address
															</label>
															<div class="col-xs-8 col-md-9">
																<a id="email" data-type="text" data-pk="1"
																   class="editable editable-click"> <%= user.email %> </a>
															</div>
														</div>

														<div class="vertical-row vertical-center offset-bottom-1_5">
															<label class="col-xs-4 col-md-3 control-label">
																Phone Number
															</label>
															<div class="col-xs-8 col-md-9">
																<a id="phone" data-type="text" data-pk="1"
																   class="editable editable-click"> <%= user.phone %> </a>
															</div>
														</div>

														<div class="vertical-row vertical-center offset-bottom-1_5">
															<label class="col-xs-4 col-md-3 control-label">
																<%= user.date_of_birth ? 'Date of Birth (Age ' + Math.floor((Date.now() - user.date_of_birth) / 1000 / 3600 / 24 / 365) + ')' : 'Please set date of birth' %>
															</label>

															<div class="col-xs-8 col-md-9">
																<div class="input-group input-medium date date-picker"
																     data-date-format="dd.mm.yyyy"
																     data-date-end-date="+0d">
																	<input value="<%= dateOfBirth %>"
																	       id="form-date-of-birth"
																	       name="dateofbirth" type="text"
																	       class="form-control"
																	       readonly/>
																	<span class="input-group-btn">
                                                                    <button class="btn default" type="button">
                                                                        <i class="fa fa-calendar"></i>
                                                                    </button>
                                                                </span></div>
															</div>
														</div>

														<div class="vertical-row vertical-top offset-bottom-1_5">
															<label class="col-xs-4 col-md-3 control-label">
																About
															</label>
															<div class="col-xs-8 col-md-9 description-general form-group form-textarea">
																<div id="about" data-pk="1" data-type="wysihtml5"
																     data-original-title="Enter notes"
																     class="editable editable-open language_switch_container"
																     tabindex="-1"><%= user.about %>
																</div>
															</div>
														</div>

														<div class="vertical-row vertical-center offset-bottom-1_5">
															<label class="col-xs-4 col-md-3 control-label" for="active">
																Active
															</label>
															<div class="col-xs-8 col-md-9 md-checkbox-inline">

																<input id="active-switch" type="checkbox"
																       class="make-switch form-control" <%= user.active ? 'checked' : '' %>
																       data-on-text="Active"
																       data-off-text="Disabled" data-on-color="success"
																       data-off-color="warning"/>

															</div>
														</div>
													</div>
												</form>
											</div>

											<div class="col-md-12 col-lg-5 offset-top-md-2">
												<!-- BEGIN EXAMPLE TABLE PORTLET-->
												<div class="portlet light bordered">
													<div class="portlet-title">
														<div class="title-block caption font-red">
															<i class="fa fa-star font-red" aria-hidden="true"></i>
															<span class="caption-subject bold">Activity</span>
														</div>
														<div class="tools"></div>
													</div>
													<div class="portlet-body table-both-scroll">
														<table class="table table-striped table-bordered table-hover order-column"
														       id="table-user-activity">
															<thead>
															<th>Log In</th>
															<th>Log Out</th>
															</thead>
														</table>
													</div>
												</div>
											</div>
										</div>
									</div>

									<div class="tab-pane fade" id="tab_managing">
										<div class="row">
											<div class="col-md-6">
												<!-- BEGIN EXAMPLE TABLE PORTLET-->
												<div class="portlet light bordered">
													<div class="portlet-title">
														<div class="title-block caption font-red">
															<i class="fa fa-star font-red" aria-hidden="true"></i>
															<span class="caption-subject bold">Lines</span>
														</div>
														<div class="tools"></div>
													</div>
													<div class="portlet-body table-both-scroll">
														<table class="table table-striped table-bordered table-hover order-column"
														       id="table-lines">
															<thead>
															<th>#</th>
															<th>Line Name</th>
															<th>Country</th>
															<th>City</th>
															</thead>
														</table>
													</div>
												</div>
											</div>
											<div class="col-md-6">
												<!-- BEGIN EXAMPLE TABLE PORTLET-->
												<div class="portlet light bordered">
													<div class="portlet-title">
														<div class="title-block caption font-red">
															<i class="fa fa-star font-red" aria-hidden="true"></i>
															<span class="caption-subject bold">Events</span>
														</div>
														<div class="tools"></div>
													</div>
													<div class="portlet-body table-both-scroll">
														<table class="table table-striped table-bordered table-hover order-column"
														       id="table-events">
															<thead>
															<th>#</th>
															<th>Event Name</th>
															<th>Country</th>
															<th>City</th>
															</thead>
														</table>
													</div>
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-6">
												<!-- BEGIN EXAMPLE TABLE PORTLET-->
												<div class="portlet light bordered">
													<div class="portlet-title">
														<div class="title-block caption font-red">
															<i class="fa fa-star font-red" aria-hidden="true"></i>
															<span class="caption-subject bold">Bars</span>
														</div>
														<div class="tools"></div>
													</div>
													<div class="portlet-body table-both-scroll">
														<table class="table table-striped table-bordered table-hover order-column"
														       id="table-bars">
															<thead>
															<th>#</th>
															<th>Bar Name</th>
															<th>Country</th>
															<th>City</th>
															</thead>
														</table>
													</div>
												</div>
											</div>
											<div class="col-md-6">
												<!-- BEGIN EXAMPLE TABLE PORTLET-->
												<div class="portlet light bordered">
													<div class="portlet-title">
														<div class="title-block caption font-red">
															<i class="fa fa-star font-red" aria-hidden="true"></i>
															<span class="caption-subject bold">Parties</span>
														</div>
														<div class="tools"></div>
													</div>
													<div class="portlet-body table-both-scroll">
														<table class="table table-striped table-bordered table-hover order-column"
														       id="table-parties">
															<thead>
															<th>#</th>
															<th>Party Name</th>
															<th>Country</th>
															<th>City</th>
															</thead>
														</table>
													</div>
												</div>
											</div>
										</div>
									</div>

								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-12">
						<div class="pull-right group-btn">
							<button class="btn red btn-outline  sbold" onclick="showDeleteConfirmation()">
								Delete
							</button>
							<a href="/users">
								<button type="button" class="btn green pull-right">
									Save & Quit
								</button>
							</a>
						</div>
					</div>
				</div>

			</div>
			<!-- END CONTENT BODY -->
		</div>
		<!-- END CONTENT -->
	</div>
	<!-- END CONTAINER -->
</div>

<div id="change-picture-modal" class="modal fade bs-modal-lg" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
				<h4 class="modal-title">Change User Picture</h4>
			</div>
			<div class="modal-body">
				<div class="scroller" style="height:500px" data-always-visible="1" data-rail-visible1="1">
					<div class="row">
						<div class="col-md-12">
							<!-- BEGIN VALIDATION STATES-->
							<div class="portlet light portlet-fit portlet-form bordered">
								<div class="portlet-body">
									<!-- BEGIN FORM-->
									<form method="post"
									      enctype="multipart/form-data" id="form_change_picture">
										<div class="form-body">
											<div class="form-group form-md-line-input row">

												<div class="upload-demo-wrap">
													<div id="upload-profile-pic"></div>
												</div>

												<div class="col-md-3">
													<label class="control-label" for="form-profile-pic">
														Profile Picture
													</label>
												</div>
												<div class="col-md-9">
													<input type="file" id="form-profile-pic" name="profile-image"
													       class="form-control"
													       value="Choose a file"
													       accept="image/*"/>

													<div class="form-control-focus"></div>
												</div>
											</div>

											<div class="form-group form-md-line-input row">
												<div class="col-md-12">
													<div id="upload-demo"></div>
													<input type="hidden" id="imagebase64" name="imagebase64">
												</div>
											</div>
										</div>
									</form>
									<!-- END FORM-->
								</div>
							</div>
							<!-- END VALIDATION STATES-->
						</div>
						<div class="row">

						</div>
					</div>
				</div>
			</div>


			<div class="modal-footer">
				<div class="row">
					<div class="col-md-12">
						<div class="progress progress-user-picture hide">
							<div class="progress-bar " role="progressbar" aria-valuenow="0"
							     aria-valuemin="0" aria-valuemax="100" style="width:0%">
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<button type="button" data-dismiss="modal" class="btn dark btn-outline">Cancel</button>
						<button id="button-change-picture" class="btn green">Change Picture</button>
					</div>
				</div>


			</div>
		</div>
	</div>
</div>

<div id="crop-picture-modal" class="modal fade bs-modal-lg" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
				<h4 class="modal-title">Crop User Picture</h4>
			</div>
			<div class="modal-body">
				<div class="scroller" style="height:500px" data-always-visible="1" data-rail-visible1="1">
					<div class="row">
						<div class="col-md-12">
							<!-- BEGIN VALIDATION STATES-->
							<div class="portlet light portlet-fit portlet-form bordered">
								<div class="portlet-body">
									<!-- BEGIN FORM-->
									<form method="post"
									      enctype="multipart/form-data" id="form_change_picture">
										<div class="form-body">
											<img id="image-to-crop" src="<%= user.profile_picture %>"/>
										</div>
									</form>
									<!-- END FORM-->
								</div>
							</div>
							<!-- END VALIDATION STATES-->
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" data-dismiss="modal" class="btn dark btn-outline">Cancel</button>
				<button id="button-crop-picture" class="btn green">Crop Picture</button>
			</div>
		</div>
	</div>
</div>

<footer>
	<% include ../../static/footer %>

	<script>
		var user = <%- JSON.stringify(user) %>;
	</script>

	<script src="/assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
	<script src="/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>


	<script src="/assets/global/scripts/datatable.js" type="text/javascript"></script>
	<script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>

	<script src="../assets/global/plugins/bootstrap-toastr/toastr.min.js" type="text/javascript"></script>


	<script src="/js/plugins/croppie.js" type="text/javascript"></script>


	<script src="/js/profile.js" type="text/javascript"></script>
</footer>

<% include ../../static/menu %>

</body>
</html>


