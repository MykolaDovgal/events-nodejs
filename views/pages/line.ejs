<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../static/head %>

    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="../assets/pages/css/portfolio.min.css" rel="stylesheet" type="text/css"/>
    <!-- END PAGE LEVEL STYLES -->
    <!-- BEGIN THEME LAYOUT STYLES -->

    <link href="../assets/layouts/layout/css/themes/darkblue.min.css" rel="stylesheet" type="text/css"
          id="style_color"/>
    <link href="../assets/layouts/layout/css/custom.min.css" rel="stylesheet" type="text/css"/>
    <link href="../assets/global/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css" rel="stylesheet"
          type="text/css"/>
    <link href="../assets/global/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css"/>
    <!-- END THEME LAYOUT STYLES -->


    <link href="/css/plugins/croppie.css" rel="stylesheet" type="text/css"/>


    <link href="/css/lines.css" rel="stylesheet" type="text/css"/>

</head>

<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">


<div class="page-wrapper">

    <header id="header" valign="botoom">
        <% include ../static/header %>
    </header>

    <!-- BEGIN CONTAINER -->
    <div class="page-container">

        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="wrapper-title">
                <h1 class="text-center"><%= line.line_name_eng %></h1>
                <h3 class="text-center">in <%= line.country + '/' + line.city %></h3>
            </div>
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">
                <div class="row">
                    <div class="col-md-3">
                        <div id="change-demo" class="col-md-12">

                        </div>
                        <div class="col-md-12">
                            <input type="file" id="upload-profile-pic" name="profile-image" class="form-control" value="Choose a file" accept="image/*" aria-invalid="false" aria-describedby="form-profile-pic-error"><span id="form-profile-pic-error" class="help-block help-block-error"></span>
                            <div class="form-control-focus"></div>
                        </div>
                        <div style="border: solid black 1px;height: 300px" class="col-md-12">
                            <div>

                            </div>
                        </div>
                        <div style="border: solid black 1px;height: 100px;text-align: center;"
                             class="col-md-12 form-group form-md-line-input">
                            <div class="col-md-5 ">
                                <input id="lineChangeCountry" type="text"
                                       class="form-control"
                                       placeholder="Enter Origin Name" value="<%= line.country %>"
                                       name="lineCountry" required maxlength="40">
                                <div class="form-control-focus"></div>
                                <span class="help-block">Country</span>
                            </div>
                            <div class="col-md-2">

                            </div>
                            <div class="col-md-5 ">
                                <input id="lineChangeCity" type="text"
                                       class="form-control"
                                       placeholder="Enter Origin Name" value="<%= line.city %>"
                                       name="lineCity" required maxlength="40">
                                <div class="form-control-focus"></div>
                                <span class="help-block">City</span>
                            </div>
                        </div>
                    </div>
                    <div class="row col-md-9">
                        <div class="tabbable-line">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#general-container"
                                                      data-toggle="tab"
                                                      aria-expanded="true">General</a>
                                </li>
                                <li><a href="#parties-container"
                                       data-toggle="tab"
                                       aria-expanded="false">Parties</a>
                                </li>
                                <li><a href="#followers-container"
                                       data-toggle="tab"
                                       aria-expanded="false">Followers</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="general-container">
                                    <form enctype="multipart/form-data" action="/line/update" method="post" id="form_change_line">
                                        <div class="col-md-7 form-group form-md-line-input">
                                            <div class="col-md-12">
                                                <label class="col-md-4 control-label">
                                                    Title
                                                </label>
                                                <div class="col-md-8 form-group">
                                                    <div class="col-md-6">
                                                        <input  type="text"
                                                               class="form-control"
                                                               placeholder="Enter Origin Name"
                                                               value="<%= line.line_name_eng %>"
                                                               name="englishTitle" required maxlength="40">
                                                        <div class="form-control-focus"></div>
                                                        <span class="help-block">English Title</span>
                                                    </div>

                                                    <div class="col-md-6 ">
                                                        <input  type="text"
                                                               class="form-control"
                                                               placeholder="Enter Origin Name"
                                                               value="<%= line.line_name_ol %>"
                                                               name="originalTitle" required maxlength="40">
                                                        <div class="form-control-focus"></div>
                                                        <span class="help-block">Original Title</span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <label class="col-md-4 control-label">
                                                    Facebook Page
                                                </label>
                                                <div class="col-md-8">
                                                    <input type="text"
                                                           class="form-control"
                                                           placeholder="Enter Origin Name" value="<%= line.facebook_page %>"
                                                           name="facebookLink" required>
                                                    <div class="form-control-focus"></div>
                                                    <span class="help-block">Facebook Link</span>
                                                </div>
                                            </div>


                                            <div class="col-md-12">

                                                <label class="col-md-4 control-label">
                                                    Website
                                                </label>
                                                <div class="col-md-8 form-group form-md-line-input">
                                                    <input type="text"
                                                           class="form-control"
                                                           placeholder="Enter Origin Name" value="<%= line.website %>"
                                                           name="websiteLink" required>
                                                    <div class="form-control-focus"></div>
                                                    <span class="help-block">Website Link</span>
                                                </div>
                                            </div>

                                            <div class=" col-md-12">

                                                <label class="col-md-4 control-label">
                                                    Description
                                                </label>
                                                <textarea
                                                        name="englishDescription"
                                                        class=" col-md-8"
                                                        rows="3"
                                                        style="margin-top: 0px; margin-bottom: 0px; height: 96px; resize: none"><%= line.description_eng %></textarea>
                                            </div>

                                            <div class="form-group form-md-line-input has-info" style="border: solid black 1px;float: right;width: 500px;height: 200px;margin: 10px 10px 0 0">
                                                <div class="col-md-5" id="select_container">
                                                    <select name="genres0" class="form-control">
                                                        <option value=""></option>
                                                        <option value="1">Option 1</option>
                                                        <option value="2">Option 2</option>
                                                        <option value="3">Option 3</option>
                                                        <option value="4">Option 4</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-2">
                                                    <button type="button" id="add_genres_btn" class="btn btn-circle btn-icon-only blue">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-5" style="border: solid black 1px;height: 550px;">

                                        </div>
                                        <button type="submit" form="form_change_line"  class="btn btn-lg blue" style="float: right">
                                            <i class="fa fa-file-o"></i> Blue </button>
                                    </form>

                                </div>

                                <div class="tab-pane" id="parties-container" style="border: solid black 1px">
                                    <div class="form-group form-md-line-input">
                                        <div class="col-md-12">
                                            123123wer
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane" id="followers-container" style="border: solid black 1px">
                                    <div class="form-group form-md-line-input">
                                        <div class="col-md-12">
                                            wer
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- END CONTENT BODY -->
        </div>
        <!-- END CONTENT -->

    </div>
    <!-- END CONTAINER -->
</div>


<footer>
    <% include ../static/footer %>

    <script src="/assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
    <script src="/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>

    <script src="/assets/global/plugins/bootstrap-modal/js/bootstrap-modalmanager.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/bootstrap-modal/js/bootstrap-modal.js" type="text/javascript"></script>

    <script src="/assets/pages/scripts/ui-extended-modals.min.js" type="text/javascript"></script>

    <script src="/js/plugins/croppie.js" type="text/javascript"></script>


    <script src="/js/line.js" type="text/javascript"></script>


</footer>

<% include ../static/menu %>

</body>
</html>