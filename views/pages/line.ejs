<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../static/head %>

    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="/assets/pages/css/portfolio.min.css" rel="stylesheet" type="text/css"/>
    <!-- END PAGE LEVEL STYLES -->
    <!-- BEGIN THEME LAYOUT STYLES -->



    <link href="/assets/layouts/layout/css/themes/darkblue.min.css" rel="stylesheet" type="text/css"
          id="style_color"/>
    <link href="/assets/layouts/layout/css/custom.min.css" rel="stylesheet" type="text/css"/>
    <!-- END THEME LAYOUT STYLES -->


    <link href="/css/plugins/croppie.css" rel="stylesheet" type="text/css"/>


    <link href="/css/lines.css" rel="stylesheet" type="text/css"/>

</head>

<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">


<div class="page-wrapper">

    <header id="header" valign="botoom">
        <% include ../static/header %>
    </header>

    <!-- BEGIN CONTAINER -->
    <div class="page-container">

        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="wrapper-title">
                <h1 class="page-title text-center"><%= line.line_name_eng %></h1>
                <h3 class="page-title text-center">in <%= line.country + '/' + line.city %></h3>
            </div>
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">
                <div class="row">

                    <div class="col-md-3">
                        <div id="change-demo" class="col-md-12">

                        </div>
                        <div class="col-md-12">
                            <input type="file" id="upload-profile-pic" name="profile-image" class="form-control"
                                   value="Choose a file" accept="image/*" aria-invalid="false"
                                   aria-describedby="form-profile-pic-error"><span id="form-profile-pic-error"
                                                                                   class="help-block help-block-error"></span>
                            <div class="form-control-focus"></div>
                        </div>
                        <div style="border: solid black 1px;height: 300px" class="col-md-12">
                            <div>

                            </div>
                        </div>
                        <div style="border: solid black 1px;height: 100px;text-align: center;"
                             class="col-md-12 form-group form-md-line-input">
                            <div class="col-md-5 ">
                                <a id="line_country" data-type="text" data-pk="1" class="editable editable-click"> <%= line.country %> </a>
                            </div>
                            <div class="col-md-2">

                            </div>
                            <div class="col-md-5 ">
                                <a id="line_city" data-type="text" data-pk="1" class="editable editable-click"> <%= line.city %> </a>
                            </div>
                        </div>
                    </div>
                    <div class="row col-md-9">

                        <div class="tabbable-line">

                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#general-container"
                                                      data-toggle="tab"
                                                      aria-expanded="true">General</a>
                                </li>
                                <li><a href="#parties-container"
                                       data-toggle="tab"
                                       aria-expanded="false">Parties</a>
                                </li>
                                <li><a href="#followers-container"
                                       data-toggle="tab"
                                       aria-expanded="false">Followers</a>
                                </li>
                            </ul>
                            <div class="tab-content">

                                <div class="tab-pane active" id="general-container">

                                    <form enctype="multipart/form-data" method="post"
                                          id="form_change_line">
                                        <div class="col-md-7 form-group form-md-line-input">

                                            <div class="col-md-12">
                                                <label class="col-md-4 control-label">
                                                    Title
                                                </label>
                                                <div class="col-md-8 form-group">
                                                    <div class="col-md-6">
                                                        <a id="line_name_eng" data-type="text" data-pk="1" class="editable editable-click"> <%= line.line_name_eng %> </a>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <a id="line_name_ol" data-type="text" data-pk="1" class="editable editable-click"> <%= line.line_name_ol %> </a>
                                                    </div>

                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <label class="col-md-4 control-label">
                                                    Facebook Page
                                                </label>
                                                <div class="col-md-8">
                                                    <a id="line_facebook_page" data-type="text" data-pk="1" class="editable editable-click"> <%= line.facebook_page %> </a>
                                                </div>
                                            </div>


                                            <div class="col-md-12">
                                                <label class="col-md-4 control-label">
                                                    Website
                                                </label>
                                                <div class="col-md-8 form-group form-md-line-input">
                                                    <a href="<%= line.website %>" id="line_website" data-type="text" data-pk="1" class="editable editable-click"> <%= line.website %> </a>
                                                </div>
                                            </div>

                                            <div class=" col-md-12">

                                                <label class="col-md-4 control-label">
                                                    Description
                                                </label>
                                                <pre id="description_eng" data-pk="1" data-type="wysihtml5"  data-original-title="Enter notes" class="editable editable-open" tabindex="-1">
                                                    <%= line.description_eng%>
                                                </pre>

                                            </div>

                                            <div class="form-group form-md-line-input has-info"
                                                 style="border: solid black 1px;float: right;width: 500px;height: 200px;margin: 10px 10px 0 0">
                                                <div class="col-md-5" id="select_container">
                                                    <select name="genres0" class="form-control">
                                                    </select>
                                                </div>
                                                <div class="col-md-2">
                                                    <button type="button" id="add_genres_btn"
                                                            class="btn btn-circle btn-icon-only blue">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-5" style="border: solid black 1px;height: 550px;">

                                        </div>
                                        <button type="submit" class="btn btn-lg blue" style="float: right">
                                            <i class="fa fa-file-o"></i> Blue
                                        </button>

                                        <a class="btn red btn-outline sbold" data-toggle="modal" href="#send_notification"> Send Notification </a>



                                    </form>

                                </div>

                                <div class="tab-pane" id="parties-container" style="border: solid black 1px">
                                    <div class="form-group form-md-line-input">
                                        <div class="col-md-12">
                                            123123wer
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane" id="followers-container" style="border: solid black 1px">
                                    <div class="form-group form-md-line-input">
                                        <div class="col-md-12">
                                            wer
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>


                </div>
            </div>
            <!-- END CONTENT BODY -->
        </div>
        <!-- END CONTENT -->

    </div>
    <!-- END CONTAINER -->

</div>


<!-- responsive modal -->
<div id="send_notification" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Create Line</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- BEGIN FORM-->
                    <div class="form-group form-md-line-input">
                        <label class="col-md-3 control-label" for="notification_content">Content
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-9">
                            <textarea id="notification_content"
                                      class="form-control"
                                      name="notification_content"
                                      rows="5"
                                      style="margin-top: 0px; margin-bottom: 0px; height: 96px;"></textarea>
                        </div>
                    </div>

                    <div class="form-group form-md-line-input">
                        <label class="col-md-3 control-label" for="notification_link">Link
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-9">
                            <input id="notification_link" type="text"
                                   class="form-control"
                                   placeholder="Enter link"
                                   name="notification_link" required>
                            <div class="form-control-focus"></div>
                            <span class="help-block">Link</span>
                        </div>
                    </div>

                    <div class="form-group form-md-line-input">
                        <label class="control-label col-md-3">Send Time</label>
                        <div class="col-md-9">
                            <div class="input-group date form_datetime bs-datetime" data-date="1979-09-16T05:25:07Z" data-date-format="dd MM yyyy - HH:ii p">
                                <input class="form-control" type="text" style="width: 100%">
                                <span class="input-group-addon"><i class="fa fa-times"></i></span>
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-md-line-input">
                        <label class="control-label col-md-3">Audience<span class="required">*</span></label>
                        <div class="col-md-9">
                            <select id="form-line-city-select"
                                    class="bs-select form-control" data-live-search="true"
                                    data-size="8"
                                    name="audience">
                                <option>All</option>
                                <option>Not All</option>
                            </select>
                        </div>
                    </div>

                    <!-- END FORM-->
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
                <button id="button-create-line" form="form_add_line" type="submit"
                        class="btn green">Create
                </button>
            </div>
        </div>
    </div>
</div>

<footer>
    <% include ../static/footer %>

    <script src="/assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
    <script src="/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>

    <script src="/assets/pages/scripts/components-date-time-pickers.min.js" type="text/javascript"></script>

    <script src="/js/plugins/croppie.js" type="text/javascript"></script>

    <script src="/js/line.js" type="text/javascript"></script>



</footer>

<% include ../static/menu %>

</body>
</html>