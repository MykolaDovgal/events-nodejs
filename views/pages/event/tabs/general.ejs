<form enctype="multipart/form-data" method="post"
      id="form_change_event">
	<div class="col-md-7 form-md-line-input">

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label">
				Title
			</label>
			<div class="col-md-9">
				<div class="col-xs-12 language_switch_container">
					<a id="title_eng" data-type="text" data-pk="1"
					   class="editable editable-click" style="display: inline-block"> <%= event.title_eng %> </a>
				</div>
				<div hidden class="col-xs-12 language_switch_container">
					<a id="title_ol" data-type="text" data-pk="1"
					   class="editable editable-click" style="display: inline-block"> <%= event.title_ol %> </a>
				</div>
			</div>
		</div>

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label" for="active">Active</label>
			<div class="col-md-9 md-checkbox-inline">
				<div class="col-xs-12">
					<input id="active-switch" type="checkbox"
					       class="make-switch form-control" <%= event.active ? 'checked' : '' %> data-on-color="success"
					       data-on-text="Active" data-off-text="Disabled" data-off-color="warning"/>
				</div>
			</div>
		</div>


		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label">
				Start Date
			</label>
			<div class="col-md-9">
				<div class="col-xs-12">
					<div id="start_date_div" class="input-group date">
						<input title="Start Date" id="start_date" class="form-control"
						       type="text"
						       data-date-format="dd/mm/yyyy" value="<%= start_date %>">
						<span class="input-group-addon"><i class="fa fa-times"></i></span>
						<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
					</div>
				</div>
			</div>
		</div>

		<div class="row vertical-row vertical-center offset-bottom-1_5">
			<label class="col-md-3 control-label">
				End Date
			</label>
			<div class="col-md-9">
				<div class="col-xs-12">
					<div id="end_date_div" class="input-group date">
						<input title="End Date" id="end_date" class="form-control"
						       type="text"
						       data-date-format="dd/mm/yyyy" value="<%= end_date %>">
						<span class="input-group-addon"><i class="fa fa-times"></i></span>
						<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
					</div>
				</div>
			</div>
		</div>


		<div class="row vertical-row vertical-top offset-bottom-1_5">

			<label class="col-md-3 control-label">
				Description
			</label>

			<div class="col-md-9 description-general form-group form-textarea">
				<div id="description_eng" data-pk="1" data-type="wysihtml5"
				     data-original-title="Enter notes"
				     class="editable editable-open language_switch_container"><%= event.description_eng %></div>

				<div hidden id="description_ol" data-pk="1" data-type="wysihtml5"
				     data-original-title="Enter notes"
				     class="editable editable-open language_switch_container"><%= event.description_ol %></div>
			</div>
		</div>
	</div>

	<div class="col-md-5 border-line block-manager offset-top-xs-2">

		<div class="portlet-title">

			<div class="title-block caption font-red">
				<i class="fa fa-user" aria-hidden="true"></i>
				<span class="caption-subject bold">Managers</span>
			</div>
		</div>
		<div class="portlet-body table-both-scroll">
			<table class="table table-striped table-bordered table-hover order-column"
			       id="table_event_managers">
				<thead>
				<th class="no-sort"></th>
				<th>UserID</th>
				<th>Picture</th>
				<th>User Name</th>
				<th>Permission</th>
				</thead>
			</table>

			<div class="input-add">
				<div class="input-group">
														<span class="input-group-addon">
															<i class="fa fa-search" aria-hidden="true"></i>
														</span>
					<input type="text" id="event_managers_search" placeholder="User name"
					       name="user_search" class="form-control"/>
					<span class="input-group-addon btn-manager_user">
															<button id="add_event_manager" type="button"
															        class="btn btn-icon-only green pull-right">
															<i class="fa fa-plus"></i>
														</button>
														</span>
				</div>
				<div class="col-md-2">

				</div>
			</div>

		</div>

	</div>
	
</form>
<div class="col-xs-12 offset-top-5">
	<div class="pull-right group-btn">
		<button class="btn yellow btn-outline sbold" id="delete_event">
			Delete Event
		</button>
		<a href="/events">
			<button type="button" class="btn green pull-right">
				Save & Quit
			</button>
		</a>
        <a class="btn btn-circle btn-info" data-target="#send_event_notification" data-toggle="modal">Send
            Notification
        </a>

	</div>
</div>


<div id="send_event_notification" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Send Notification</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- BEGIN FORM-->
                    <form id="notification_form" method="post">
                        <div class="col-xs-12 form-group form-md-line-input">
                            <label class="col-md-3 control-label" for="form_control_1">Memo</label>
                            <div class="col-md-9">
								<textarea id="notification_content"
                                          class="form-control"
                                          name="notification_content"
                                          rows="5" rows="3"></textarea>
                                <div class="form-control-focus"></div>
                            </div>
                        </div>

                        <div class="col-xs-12 form-group form-md-line-input">
                            <label class="col-md-3 control-label" for="notification_link">Link
                                <span class="required">*</span>
                            </label>
                            <div class="col-md-9">
                                <input id="notification_link" type="text"
                                       class="form-control"
                                       placeholder="Enter link"
                                       name="notification_link" required>
                                <div class="form-control-focus"></div>
                                <span class="help-block">Link</span>
                            </div>
                        </div>

                        <div class="col-xs-12 form-group form-md-line-input">
                            <label class="control-label col-md-3">Send Time</label>
                            <div class="col-md-9">
                                <div id="datetime_input" class="input-group date">
                                    <input name="notification_time" class="form-control" type="text" style="width: 100%"
                                           data-date-format="yyyy/mm/dd hh:ii">
                                    <span class="input-group-addon"><i class="fa fa-times"></i></span>
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 form-group form-md-line-input">
                            <label class="control-label col-md-3">Audience<span class="required">*</span></label>
                            <div class="col-md-9">
                                <select id="form-line-city-select"
                                        class="bs-select form-control" data-live-search="true"
                                        data-size="8"
                                        name="notification_audience">
                                    <option>All</option>
                                    <option>Not All</option>
                                </select>
                            </div>
                        </div>

                    </form>
                    <!-- END FORM-->
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-outline dark">Cancel</button>
                <button id="submit_send_event_party" type="button" data-dismiss="modal" class="btn green">Submit</button>
            </div>
        </div>
    </div>
</div>